@page "/shop"
@using AccountingApp.Shared.Models
@using AccountingApp.Client.Services
@inject HttpClient Http
@inject IToastService ToastService  // <--- Inject Toast Service

<h3>Product Catalog</h3>

<div class="row">
    @foreach (var p in products)
    {
            <div class="col-md-4 mb-3">
                       <div class="card h-100 shadow-sm"> <!-- Added shadow-sm for depth -->

                    <!-- 1. ADD THIS IMAGE TAG -->
                    <img src="@p.ImageUrl"
                         class="card-img-top"
                         alt="@p.Name"
                         style="height: 200px; object-fit: contain; padding: 1rem;">
                    <!--
                         height: 200px; -> Forces all images to be the same height
                         object-fit: contain; -> Ensures the whole product is visible without cropping
                         padding: 1rem; -> Adds white space so the image isn't touching the edges
                    -->

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@p.Name</h5>

                        <div class="mt-auto"> <!-- Pushes price and button to bottom -->
                            <p class="card-text text-success fw-bold fs-5">$@p.Price</p>

                            <p class="card-text">
                                @if (p.Stock > 0)
                                {
                                        <small class="text-muted">@p.Stock in stock</small>
                                }
                                else
                                {
                                        <span class="badge bg-danger">Out of Stock</span>
                                }
                            </p>

                            <button class="btn btn-primary w-100"
                                    disabled="@(p.Stock == 0)"
                                    @onclick="() => AddToCart(p)">
                                <i class="bi bi-cart-plus"></i> @(p.Stock == 0 ? "Unavailable" : "Add to Cart")
                            </button>
                        </div>
                    </div>
                </div>
            </div>
    }
</div>

@code {
    [CascadingParameter] public CartState State { get; set; } = null!;
    private List<Product> products = new();

    protected override async Task OnInitializedAsync()
    {
        products = await Http.GetFromJsonAsync<List<Product>>("api/Products") ?? new();
    }

    private async Task AddToCart(Product p)
    {
        // Simple client-side validation
        // (Note: For a real app, you might want to check State.Items to see
        //  if they already have the max stock in their cart)

        await State.AddToCart(p);

        // Show Toast
        ToastService.ShowSuccess($"Added {p.Name} to cart");
    }
}