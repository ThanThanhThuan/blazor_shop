@page "/general-journal"
@using AccountingApp.Shared.Models
@inject HttpClient Http
@inject NavigationManager Nav

<h3>General Journal</h3>

<div class="card p-3 mb-4 bg-light">
    <div class="row align-items-end">
        <div class="col-md-3">
            <label class="form-label">Start Date</label>
            <InputDate @bind-Value="startDate" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">End Date</label>
            <InputDate @bind-Value="endDate" class="form-control" />
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary w-100" @onclick="LoadData">
                <span class="bi bi-search"></span> Filter
            </button>
        </div>
    </div>
</div>

@if (items == null)
{
    <p><em>Click Filter to load data...</em></p>
}
else if (items.Count == 0)
{
    <div class="alert alert-info">No transactions found in this date range.</div>
}
else
{
    <table class="table table-striped table-hover table-sm">
        <thead class="table-dark">
            <tr>
                <th>Date</th>
                <th>Entry ID</th>
                <th>Account</th>
                <th>Description</th>
                <th class="text-end">Debit</th>
                <th class="text-end">Credit</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in items)
            {
                <tr>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>
                        <a href="entry/edit/@item.JournalEntryId">#@item.JournalEntryId</a>
                    </td>
                    <td>@item.AccountName</td>
                    <td>@item.Description</td>
                    <td class="text-end">
                        @(item.Debit != 0 ? item.Debit.ToString("N2") : "")
                    </td>
                    <td class="text-end">
                        @(item.Credit != 0 ? item.Credit.ToString("N2") : "")
                    </td>
                    <td class="text-center">
                        <a href="entry/edit/@item.JournalEntryId" class="btn btn-link btn-sm p-0">
                            <span class="bi bi-pencil-square"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot class="fw-bold bg-light">
            <tr>
                <td colspan="4" class="text-end">Totals:</td>
                <td class="text-end">@items.Sum(x => x.Debit).ToString("N2")</td>
                <td class="text-end">@items.Sum(x => x.Credit).ToString("N2")</td>
                <td></td>
            </tr>
        </tfoot>
    </table>
}

@code {
    private DateTime startDate = DateTime.Today.AddDays(-30); // Default to last 30 days
    private DateTime endDate = DateTime.Today;
    private List<LedgerItem>? items;

    protected override async Task OnInitializedAsync()
    {
        // Optionally load data immediately on page load
        await LoadData();
    }

    private async Task LoadData()
    {
        // Format dates for URL (yyyy-MM-dd is safest for APIs)
        string start = startDate.ToString("yyyy-MM-dd");
        string end = endDate.ToString("yyyy-MM-dd");

        items = await Http.GetFromJsonAsync<List<LedgerItem>>($"api/JournalEntries/general?startDate={start}&endDate={end}");
    }
}